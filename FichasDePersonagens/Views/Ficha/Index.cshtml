@model List<FichasDePersonagens.Models.Ficha>

@{
    ViewData["Title"] = "Fichas de Personagens";
}

<div class="container mt-5">
    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-1">Fichas de Personagens</h1>
            <p class="text-muted mb-0">Gerencie seus personagens e veja seus atributos.</p>
        </div>
        <a asp-controller="Ficha" asp-action="Criar" class="btn btn-lg btn-success shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Nova Ficha
        </a>
    </div>

    <!-- Tabela -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome</th>
                            <th>Idade</th>
                            <th>Classe</th>
                            <th>Força</th>
                            <th>Agilidade</th>
                            <th>Inteligência</th>
                            <th>Defesa</th>
                            <th>Energia</th>
                            <th>Habilidades</th>
                            <th>Curiosidades</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@f.Nome</td>
                                <td>@f.Idade</td>
                                <td>@f.Classe</td>
                                <td>@f.Forca</td>
                                <td>@f.Agilidade</td>
                                <td>@f.Inteligencia</td>
                                <td>@f.Defesa</td>
                                <td>@f.Energia</td>
                                <td>@f.Habilidades</td>
                                <td>@f.Curiosidades</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4 text-center shadow-sm">
            Nenhuma ficha cadastrada ainda. Clique em <strong>"Nova Ficha"</strong> para começar!
        </div>
    }
</div>
