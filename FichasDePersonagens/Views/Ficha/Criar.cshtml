@model FichasDePersonagens.Models.Ficha

@{
    ViewData["Title"] = "Criar Ficha";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100 p-5">
    <div class="card shadow-lg p-4" style="width: 500px;">
        <h2 class="text-center mb-4">Criar Nova Ficha</h2>

        <form asp-action="Criar" method="post">
            <!-- Nome -->
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Nome" type="text" class="form-control" placeholder="Nome do personagem" maxlength="100" required />
                </div>
            </div>

            <!-- Idade -->
            <div class="mb-3">
                <label asp-for="Idade" class="form-label">Idade</label>
                <input asp-for="Idade" type="number" class="form-control" placeholder="Idade" />
            </div>

            <!-- Origem -->
            <div class="mb-3">
                <label asp-for="Origem" class="form-label">Origem</label>
                <input asp-for="Origem" type="text" class="form-control" placeholder="Origem do personagem" maxlength="100" />
            </div>

            <!-- Classe -->
            <div class="mb-3">
                <label asp-for="Classe" class="form-label">Classe</label>
                <input asp-for="Classe" type="text" class="form-control" placeholder="Classe do personagem" maxlength="100" />
            </div>

            <!-- Atributos -->
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Forca" class="form-label">Força</label>
                    <input asp-for="Forca" type="number" class="form-control" />
                </div>
                <div class="col mb-3">
                    <label asp-for="Agilidade" class="form-label">Agilidade</label>
                    <input asp-for="Agilidade" type="number" class="form-control" />
                </div>
                <div class="col mb-3">
                    <label asp-for="Inteligencia" class="form-label">Inteligência</label>
                    <input asp-for="Inteligencia" type="number" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Defesa" class="form-label">Defesa</label>
                    <input asp-for="Defesa" type="number" class="form-control" />
                </div>
                <div class="col mb-3">
                    <label asp-for="Energia" class="form-label">Energia</label>
                    <input asp-for="Energia" type="number" class="form-control" />
                </div>
            </div>

            <!-- Habilidades -->
            <div class="mb-3">
                <label asp-for="Habilidades" class="form-label">Habilidades</label>
                <input asp-for="Habilidades" type="text" class="form-control" placeholder="Ex: Ataque Especial, Cura" />
            </div>

            <!-- Curiosidades -->
            <div class="mb-3">
                <label asp-for="Curiosidades" class="form-label">Curiosidades</label>
                <input asp-for="Curiosidades" type="text" class="form-control" placeholder="Informações extras" />
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-plus-circle me-2"></i> Criar Ficha
            </button>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
